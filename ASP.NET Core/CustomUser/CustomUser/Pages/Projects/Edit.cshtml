@page
@model CustomUser.Pages.Projects.EditModel
@{
}



<div class="col-md-8 border border-secondary rounded m-2 p-3">

    @if (string.IsNullOrEmpty(Model.Project.Title))
    {
        <h3>New project</h3>
    }
    else
    {
        <h3>Editing project "@Model.Project.Title"</h3>
    }

    <form method="post" id="edit-form">
        <input type="hidden" asp-for="Project.ProjectId" />

        <div class="form-group">
            <label asp-for="Project.Title"></label>
            <input asp-for="Project.Title" class="form-control" />
            <span class="text-danger" asp-validation-for="Project.Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Project.Description"></label>
            <textarea asp-for="Project.Description" class="form-control" rows="4"></textarea>
        </div>

    </form>

</div>

<div class="col border border-secondary rounded m-2 p-3">

    <h5>Actions:</h5>
    <button type="submit" form="edit-form" class="btn btn-outline-success btn-block">Save project</button>

    <hr />
    <a asp-page="#" class="btn btn-outline-secondary btn-block btn-sm">Cancel</a>

</div>
