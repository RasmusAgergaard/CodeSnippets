        <input asp-for="Title" />

        <input asp-for="DueAt" id="datepicker" type="datetime-local">
        <script>
            var datepicker = new ej.calendars.DatePicker({ placeholder: "Choose a date", width: "255px", format: "dd-MM-yyyy"});
            datepicker.appendTo('#datepicker');
        </script>

        <button type="submit">Add</button>
    </form>
